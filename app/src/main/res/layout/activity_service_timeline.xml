<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etStartYear"
        android:hint="Enter Start Year (e.g., 2005)"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"/>
    <EditText
        android:id="@+id/etEndYear"
        android:hint="Enter Retirement Year (e.g., 2022)"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_marginTop="12dp" />



    <EditText
        android:id="@+id/etInitialRank"
        android:hint="Enter Initial Rank (e.g., Sepoy)"
        android:inputType="textCapWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_marginTop="12dp"/>
    <EditText
        android:id="@+id/etRetiredRank"
        android:hint="Enter Retired Rank (e.g., Havildar)"
        android:inputType="textCapWords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_marginTop="12dp"/>


    <Button
        android:id="@+id/btnGenerateTimeline"
        android:text="Generate Service Timeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="24dp"
        android:textColor="@android:color/black" />
    <LinearLayout
        android:id="@+id/timelineLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="12dp" />



</LinearLayout>
