<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- ðŸ” Camera Preview for OCR -->
        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginBottom="16dp"
            android:background="#000000" />

        <!-- ðŸ“„ OCR Text Display -->
        <TextView
            android:id="@+id/tvExtractedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extracted text will appear here..."
            android:padding="12dp"
            android:background="#EEEEEE"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- âœï¸ Editable Fields -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingVertical="12dp"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etRank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingVertical="12dp"
            android:hint="Rank"
            android:inputType="text"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etPpo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingVertical="12dp"
            android:hint="PPO Number"
            android:inputType="text"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etDob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingVertical="12dp"
            android:hint="Date of Birth (dd-mm-yyyy)"
            android:inputType="date"
            android:layout_marginBottom="16dp" />

        <!-- ðŸ“· Capture Text Button -->
        <Button
            android:id="@+id/btnCaptureText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“· Capture &amp; Auto-Fill"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white" />

        <!-- ðŸ“ Attach Additional Docs -->
        <Button
            android:id="@+id/btnAttachDocs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Attach Documents (Optional)"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white" />

        <!-- ðŸ§¾ Export PDF -->
        <Button
            android:id="@+id/btnExportAutoPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ§¾ Export Auto-Filled Pension PDF"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
